{
    "name": "Vue Dev Container",
    "build": {
      "dockerfile": "Dockerfile"
    },
    "postCreateCommand": "cd myapp && npm install && npm run dev",
    "forwardPorts": [5173],
    "customizations": {
      "vscode": {
        "settings": {
            "terminal.integrated.shell.linux": "/bin/bash"
          },
        "extensions": [
          "esbenp.prettier-vscode",
          "dbaeumer.vscode-eslint",
          "octref.vetur"
        ]
      }
    }
  }